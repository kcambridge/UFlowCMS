@model connex.Models.Page

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Page</h4>
        <hr />
        <span class="text-danger">@Html.ValidationSummary(true)</span>

        <div class="form-group">
            @Html.LabelFor(model => model.Page_Name, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Page_Name)
                @Html.ValidationMessageFor(model => model.Page_Name)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.URL, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.URL)
                @Html.ValidationMessageFor(model => model.URL)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Title_Text, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Title_Text)
                @Html.ValidationMessageFor(model => model.Title_Text)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Banner_ID, "Banner_ID", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("Banner_ID", String.Empty)
                @Html.ValidationMessageFor(model => model.Banner_ID)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Is_Default, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Is_Default)
                @Html.ValidationMessageFor(model => model.Is_Default)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

