@model IEnumerable<connex.Models.Page>

@{
    ViewBag.Title = "Index";
}



 
<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Page_Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.URL)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Title_Text)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Is_Default)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Banner.Banner_Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Page_Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.URL)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Title_Text)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Is_Default)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Banner.Banner_Name)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Page_ID }) |
            @Html.ActionLink("Details", "Details", new { id=item.Page_ID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Page_ID })
        </td>
    </tr>
}

</table>
