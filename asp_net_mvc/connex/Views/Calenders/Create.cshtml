@model connex.ViewModels.CalenderCreateViewModel
@{
ViewBag.Title = "Create";
}
<h2>Create</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Calender</h4>
        <hr />
        <span class="text-danger">@Html.ValidationSummary(true)</span>

        

        <div class="form-group">
            @Html.LabelFor(model => model.Calender_Name, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.Calender_Name, new { @class="form-control col-md-5"})
                @Html.ValidationMessageFor(model => model.Calender_Name)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default col-md-2" />&nbsp;
                @if (ViewBag.Return_Home != null && ViewBag.Page_Url != null)
                {
                     @Html.ActionLink("Cancel","View", "Pages", new{id=ViewBag.Page_Url}, new{@class="btn btn-default col-md-2"})
                }
                else
                {
                    @Html.ActionLink("Cancel","Edit", "Pages", new{id=Model.Page_ID}, new{@class="btn btn-default col-md-2"})
                }
            </div>
        </div>
    </div>
}

<div>
    
</div>

