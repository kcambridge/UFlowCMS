                                                @foreach(var mode in Model.availableWidthModes)
                                                {
                                                    if (sect.Media_Width_Mode_ID == mode.Width_Mode_ID)
                                                    {
                                                        <option value="@mode.Width_Mode_ID" selected="selected">@mode.Width_Mode</option>   
                                                    }
                                                    else
                                                    {
